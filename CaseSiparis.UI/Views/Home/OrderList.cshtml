@model CaseSiparis.DataEntity.Product

@using (Html.BeginForm("AddOrder", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col">
                @Html.Label("Tarih")
                <input type="date" class="form-control">
            </div>

            <div class="col">
                @Html.Label("Firma")
                @Html.DropDownListFor(h => h.CompanyId, (List<SelectListItem>)ViewBag.valueCompany, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                @Html.Label("Ürün Adı")
                @Html.TextBoxFor(c => c.ProductName, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ProductName)
            </div>

            <div class="col">
                @Html.Label("Ürün Adedi")
                @Html.TextBoxFor(c => c.ProductCount, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ProductCount)
            </div>
            <div class="col">
                @Html.Label("Tutar")
                <div class="input-group mb-3">
                    <span class="input-group-text">₺</span>
                    @Html.TextBoxFor(c => c.ProductAmount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.ProductAmount)
                    <span class="input-group-text">.00</span>
                </div>
            </div>
        </div>
        <div >
            <button class="btn btn-success">Sipariş Ver</button>
        </div>
    }
