@model CaseSiparis.DataEntity.Concrete.Company
@{
    ViewData["Title"] = "Privacy Policy";
}

@using (Html.BeginForm("AddCompany", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Firma Adı")
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CompanyName)
        <div class="mt-2">
            <button class="btn btn-success">
                Ekle
            </button>
        </div>
    </div>
}